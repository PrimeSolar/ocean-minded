<!-- MapLibre CSS and JS -->
<link
  rel="stylesheet"
  href="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.css"
/>
<script
  src="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.js"
  defer
></script>

<!-- Custom Map Script -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const map = new maplibregl.Map({
      container: "map",
      style: "https://demotiles.maplibre.org/style.json", // MapLibre style
      center: [-157, 20.8], // Longitude, Latitude for Hawaii
      zoom: 6,
    });

    const locations = [
      {
        name: "Kauai",
        coordinates: [-159.5732, 21.9661],
        activities:
          "relax on serene beaches, walk through lush botanical gardens, or swim in crystal-clear waters.",
      },
      {
        name: "Honolulu, Oahu",
        coordinates: [-157.8583, 21.3069],
        activities:
          "enjoy the popular Waikiki Beach, visit the Honolulu Museum of Art, or hike to Diamond Head for beautiful views.",
      },
      {
        name: "Molokai",
        coordinates: [-157.0583, 21.1445],
        activities:
          "experience the untouched beauty of Kalaupapa National Historical Park, hike to the highest sea cliffs, or enjoy local culture.",
      },
      {
        name: "Lanai",
        coordinates: [-156.9223, 20.8032],
        activities:
          "explore the luxury resorts, enjoy wonderful landscapes, or relax on secluded beaches.",
      },
      {
        name: "Maui",
        coordinates: [-156.3319, 20.7984],
        activities:
          "drive the scenic Road to Hana, relax on Kaanapali Beach, or visit the Lavender Farm.",
      },

      {
        name: "Big Island, Hawaii",
        coordinates: [-155.6659, 19.8968],
        activities:
          "take a helicopter tour, relax on sand beaches, or explore the lush forests.",
      },
    ];

    locations.forEach((location) => {
      new maplibregl.Marker()
        .setLngLat(location.coordinates)
        .setPopup(
          new maplibregl.Popup().setText(
            `${location.name}: ${location.activities}`
          )
        ) // Add popups with activities
        .addTo(map);
    });
  });
</script>

