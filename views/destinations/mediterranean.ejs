<!-- MapLibre CSS and JS -->
<link
  rel="stylesheet"
  href="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.css"
/>
<script
  src="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.js"
  defer
></script>

<!-- Custom Map Script -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const map = new maplibregl.Map({
      container: "map",
      style: "https://demotiles.maplibre.org/style.json", // MapLibre style
      center: [14, 38], // Longitude, Latitude for Mediterranean
      zoom: 4,
    });

    const locations = [
      {
        name: "Dobrota, Montenegro",
        coordinates: [18.768, 42.45417],
        activities:
          "enjoy the beautiful waterfront promenade, visit the nearby town of Kotor, or relax at the local beaches.",
      },
      {
        name: "Tivat, Montenegro",
        coordinates: [18.718, 42.42348],
        activities:
          " visit the nearby island of Our Lady of Mercy, explore the luxurious Porto Montenegro, or relax at the beaches.",
      },
      {
        name: "Dubrovnik, Croatia",
        coordinates: [18.11, 42.6507],
        activities:
          "walk the ancient city walls, explore the Old Town, or take a boat trip to the nearby islands.",
      },
      {
        name: "Santorini, Greece",
        coordinates: [25.43, 36.3932],
        activities:
          "explore the beautiful sunsets in Oia, relax on the unique beaches, or visit the ancient ruins of Akrotiri.",
      },
      {
        name: "Amalfi Coast, Italy",
        coordinates: [14.6026, 40.634],
        activities:
          "drive along the scenic coastal road, visit the beautiful town of Positano, or enjoy fresh food by the sea.",
      },
      {
        name: "Malta",
        coordinates: [14.3754, 35.9375],
        activities:
          "discover the historic sites of Valletta, relax on the beaches of Gozo, or explore the Blue Lagoon.",
      },
      {
        name: "Barcelona, Spain",
        coordinates: [2.1734, 41.3851],
        activities:
          "visit the famous Sagrada Familia, walk through Park GÃ¼ell, or explore the vibrant La Rambla.",
      },
    ];

    locations.forEach((location) => {
      new maplibregl.Marker()
        .setLngLat(location.coordinates)
        .setPopup(
          new maplibregl.Popup().setText(
            `${location.name}: ${location.activities}`
          )
        ) // Add popups with activities
        .addTo(map);
    });
  });
</script>

