<!-- MapLibre CSS and JS -->
<link
  rel="stylesheet"
  href="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.css"
/>
<script
  src="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.js"
  defer
></script>

<!-- Custom Map Script -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const map = new maplibregl.Map({
      container: "map",
      style: "https://demotiles.maplibre.org/style.json", // MapLibre style
      center: [-124, 48], // Longitude, Latitude for Pacific Northwest
      zoom: 5,
    });

    const locations = [
      {
        name: "Vancouver, BC",
        coordinates: [-123.1216, 49.2827],
        activities:
          "walk through Stanley Park, visit Granville Island, or explore the Capilano Suspension Bridge.",
      },
      {
        name: "Olympic National Park, WA",
        coordinates: [-123.6044, 47.8021],
        activities:
          "hike through lush rainforests, explore the rugged coastline, or visit Hurricane Ridge for stunning views.",
      },
      {
        name: "Seattle, WA",
        coordinates: [-122.3321, 47.6062],
        activities:
          "visit the Space Needle, explore Pike Place Market, or take a ferry to Bainbridge Island.",
      },
      {
        name: "Mount Rainier National Park, WA",
        coordinates: [-121.7603, 46.8523],
        activities:
          "hike the scenic trails, enjoy wildflower meadows, or enjoy the views of Mount Rainier.",
      },
      {
        name: "Portland, OR",
        coordinates: [-122.6765, 45.5231],
        activities:
          "enjoy the food trucks, explore the Portland Japanese Garden, or visit the Columbia River Gorge.",
      },
    ];

    locations.forEach((location) => {
      new maplibregl.Marker()
        .setLngLat(location.coordinates)
        .setPopup(
          new maplibregl.Popup().setText(
            `${location.name}: ${location.activities}`
          )
        ) // Add popups with activities
        .addTo(map);
    });
  });
</script>

