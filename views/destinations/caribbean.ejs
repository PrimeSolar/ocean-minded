<!-- MapLibre CSS and JS -->
<link
  rel="stylesheet"
  href="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.css"
/>
<script
  src="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.js"
  defer
></script>

<!-- Custom Map Script -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const map = new maplibregl.Map({
      container: "map",
      style: "https://demotiles.maplibre.org/style.json", // MapLibre style
      center: [-70, 20], // Longitude, Latitude
      zoom: 4,
    });

    const islands = [
      {
        name: "Bahamas",
        coordinates: [-77.3963, 25.0343],
        activities:
          "explore the stunning beaches, go snorkeling in the blue waters, or explore the vibrant marine life at Andros Barrier Reef.",
      },
      {
        name: "Cuba",
        coordinates: [-77.7812, 21.5216],
        activities:
          "experience the vibrant culture in Havana, relax on Varadero Beach, or visit the historic town of Trinidad.",
      },
      {
        name: "Jamaica",
        coordinates: [-77.2975, 18.1096],
        activities:
          "visit the famous Dunn's River Falls, hike in the Blue Mountains, or explore the beautiful Seven Mile Beach.",
      },
      {
        name: "St. Lucia",
        coordinates: [-60.9789, 13.9094],
        activities:
          "visit the wonderful beaches of Anse Chastanet, take a boat tour to see the beautiful coastline, or explore the lush forests.",
      },
      {
        name: "Barbados",
        coordinates: [-59.5432, 13.1939],
        activities:
          "enjoy the nightlife in St. Lawrence Gap, visit the historic Bridgetown, or go surfing at Bathsheba.",
      },
    ];

    islands.forEach((island) => {
      new maplibregl.Marker()
        .setLngLat(island.coordinates)
        .setPopup(
          new maplibregl.Popup().setText(`${island.name}: ${island.activities}`)
        ) // Add popups with activities
        .addTo(map);
    });
  });
</script>

