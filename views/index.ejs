<script>
  document.addEventListener("DOMContentLoaded", function () {
    const cards = document.querySelectorAll(".card");
    const row = document.querySelector(".row");

    if (cards.length % 2 === 0) {
      row.classList.add("even-cards");
    } else {
      row.classList.add("odd-cards");
    }
  });

  document
    .getElementById("subscribeForm")
    .addEventListener("submit", function (event) {
      event.preventDefault();

      const email = document.getElementById("emailInput").value;

      // Email validation
      if (!validateEmail(email)) {
        displayMessage("Please enter a valid email address.", "danger");
        return;
      }

      fetch("/subscribe", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ email: email }),
      })
        .then((response) => {
          if (response.ok) {
            displayMessage(
              "Thank you for subscribing! Welcome to the Ocean-Minded family!",
              "success"
            );
            document.getElementById("subscribeForm").reset();
          } else {
            displayMessage("Subscription failed. Please try again.", "danger");
          }
        })
        .catch((error) => {
          displayMessage(
            "An error occurred. Please try again later.",
            "danger"
          );
        });
    });

  function validateEmail(email) {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/; // Email regex
    return re.test(String(email).toLowerCase());
  }

  function displayMessage(message, type) {
    const responseMessage = document.getElementById("responseMessage");
    responseMessage.textContent = message;
    responseMessage.className =
      type === "success" ? "text-success" : "text-danger";
  }
</script>

